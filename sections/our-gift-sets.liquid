{% schema %}
{
  "name": "t:sections.our-gift-sets.name",
  "tag": "section",
  "class": "shopify-section",
  "settings": [
    {
      "type": "collection",
      "id": "collection",
      "label": "t:sections.our-gift-sets.settings.collection.label"
    },
    {
      "type": "image_picker",
      "id": "gift_label",
      "label": "t:sections.our-gift-sets.settings.gift-label.label"
    },
    {
      "type": "richtext",
      "id": "text",
      "default": "<p>Sample Test</p>",
      "label": "t:sections.our-gift-sets.settings.title.label"
    }

  ],
  "presets": [
    {
      "name": "t:sections.our-gift-sets.presets.name"
    }
  ]
}
{% endschema %}
