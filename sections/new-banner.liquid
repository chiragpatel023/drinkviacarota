{{ 'section-new-banner.css' | asset_url | stylesheet_tag }}
<div class="hm-new-banner hm-new-banner-template--{{ section.id }}">
  <img
    class="hm-new-banner__img"
    src="{{ section.settings.desktop_image | img_url: 'master' }}"
    alt="banner image"
  >

  <img
    class="hm-new-banner__img m-mob"
    src="{{ section.settings.mobile_image | img_url: 'master' }}"
    alt="banner image"
  >

  <div class="hm-new-banner__content">
    {% if section.settings.text %}
      <h2 class="hm-new-benner__title">{{ section.settings.text }}</h2>
    {% endif %}
    {% if section.settings.button_label -%}
      <a class="hm-new-benner__btn" href="/collections/shop-all">{{ section.settings.button_label }}</a>
    {%- endif %}
  </div>
</div>
{% schema %}
{
  "name": "t:sections.new-banner.name",
  "tag": "section",
  "class": "shopify-section",
  "settings": [
    {
      "type": "image_picker",
      "id": "desktop_image",
      "label": "t:sections.new-banner.settings.banner.label"
    },
    {
      "type": "image_picker",
      "id": "mobile_image",
      "label": "t:sections.new-banner.settings.mobilebanner.label"
    },
    {
      "type": "richtext",
      "id": "text",
      "default": "<p>Sample Test</p>",
      "label": "t:sections.new-banner.settings.title.label"
    },
    {
      "type": "text",
      "id": "button_label",
      "default": "Button label",
      "label": "t:sections.new-banner.settings.button_label.label",
      "info": "t:sections.new-banner.settings.button_label.info"
    },
    {
      "type": "url",
      "id": "link",
      "label": "t:sections.new-banner.settings.link.label"
    }
  ],
  "presets": [
    {
      "name": "t:sections.new-banner.presets.name"
    }
  ]
}
{% endschema %}
